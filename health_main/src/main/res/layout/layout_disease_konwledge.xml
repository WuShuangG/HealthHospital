        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="[西药治疗]"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_14"
        />
