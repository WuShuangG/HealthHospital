<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/my_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />



        <ImageView
            android:id="@+id/my_back"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/my_message"
            android:layout_alignParentRight="true"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/common_nav_message_black_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/my_query"
            android:text="查看资料"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/fang"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            android:textColor="#0584E9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/fang"
            android:src="@drawable/common_information_next_n"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/my_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:background="@drawable/my_selector"
            android:layout_width="130dp"
            android:layout_weight="1"
            android:id="@+id/re_home_wode_li"
            android:layout_height="144dp">

            <ImageView
                android:id="@+id/my_history"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/my_xinxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_history"
                android:text="历史问诊"
                android:textSize="14dp"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/my_history"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/my_selector"
            android:layout_marginLeft="40dp"
            android:layout_width="130dp"
            android:layout_weight="1"
            android:id="@+id/re_home_wode_qian"
            android:layout_height="144dp">

            <ImageView
                android:id="@+id/my_wallet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@drawable/my_icon_wallet_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_wallet"
                android:text="我的钱包"
                android:textSize="14dp"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/my_wallet"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:background="@drawable/my_selector"
            android:layout_width="130dp"
            android:layout_weight="1"
            android:id="@+id/re_home_wode_jian"
            android:layout_height="144dp">

            <ImageView
                android:id="@+id/my_suggest"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@drawable/my_icon_recommendations_adopted_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_suggest"
                android:text="被采纳建议"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/my_suggest"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/my_selector"
            android:layout_marginLeft="40dp"
            android:layout_width="130dp"
            android:layout_weight="1"
            android:id="@+id/re_home_wode_zidong"
            android:layout_height="144dp">

            <ImageView
                android:id="@+id/my_reply"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@drawable/my_icon_automatic_response_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_reply"
                android:text="设置自动回复"
                android:textSize="14dp"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/my_reply"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>