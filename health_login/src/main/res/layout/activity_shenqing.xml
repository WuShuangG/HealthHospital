<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="54dp"
        android:id="@+id/wanshanxinxi"
        android:textSize="16sp"
        android:textColor="#3087ea"
        android:text="完善信息"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/shenhetontguo"
        android:textSize="16sp"
        android:textColor="#3087ea"
        android:layout_marginTop="15dp"
        android:text="审核通过即可成功入驻"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:id="@+id/tianxiezhengque"
        android:textSize="10sp"
        android:textColor="#d92109"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="*填写正确信息有助于快速通过审核."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="您的真实姓名"
        android:id="@+id/nindezhenshixingming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints"/>
    <EditText
        android:textSize="12sp"
        android:textColorHint="#666666"
        android:id="@+id/et_apply_name"
        android:paddingLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/realname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="您所在医院"
        android:id="@+id/ninsuozaideyiyuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_apply_name"
        tools:ignore="MissingConstraints"/>
    <EditText
        android:id="@+id/et_apply_hospital"
        android:textSize="12sp"
        android:textColorHint="#666666"
        android:paddingLeft="14dp"
        app:layout_constraintTop_toBottomOf="@id/ninsuozaideyiyuan"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:background="@drawable/realname"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="您所在科室"
        android:id="@+id/ninsuozaikeshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_apply_hospital"
        tools:ignore="MissingConstraints"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/realname"
        android:layout_marginRight="30dp"
        >
    <EditText
        android:paddingTop="0dp"
        android:id="@+id/et_apply_department"
        android:textSize="12sp"
        android:textColorHint="#666666"
        android:padding="14dp"
        android:background="@null"
        style="?android:attr/textViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:id="@+id/home_shengqing_ke_drop"
            android:src="@drawable/circle_icon_drop_down_n"
            />
    </LinearLayout>
    <TextView
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="您的职称"
        android:id="@+id/nindezhicheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/realname"
        >
    <EditText
        android:id="@+id/et_apply_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="14dp"
        android:textColorHint="#666666"
        android:background="@null"
        style="?android:attr/textViewStyle"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_marginRight="10dp"
            android:id="@+id/home_shengqing_cheng_drop"
            android:src="@drawable/circle_icon_drop_down_n"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_applyo_next"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_login"
        />
</LinearLayout>